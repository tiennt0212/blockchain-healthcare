import PropTypes from 'prop-types';
import styled from 'styled-components';
{{#if wantTranslate}}
import { useTranslation } from "react-i18next";
{{/if}}

function {{ properCase name }}({ name, onClick }) {
  {{#if wantTranslate}}
  // eslint-disable-next-line no-unused-vars
  const { t } = useTranslation();
  {{/if}}

  return <S onClick={onClick}>{name}</S>;
}

const S = styled.div`
  border: 1px solid black;
`;

{{ properCase name }}.propTypes = {
  /**
   * This is how document of prop is wrote<br/>
   * Simple display string
   */
  name: PropTypes.string,
  /**
   * Handle click event on this component
   */
  onClick: PropTypes.func,
};

{{#if memo}}
export default memo({{ properCase name }});
{{else}}
export default {{ properCase name }};
{{/if}}
